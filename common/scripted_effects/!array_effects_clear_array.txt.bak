# METHODS 函数表
# WARNING：All the variables use in this effect must be in the same scope, 
# or otherwise the method will not able to read the data correctly
# 警告：所有变量必须处于同一个值域（SCOPE），否则以下脚本方法将不能读取数据
# 
####################################################################################
# clear_array_variable = { ARRAY, VARIABLE }
# 
# 根据某一个变量的值，清除数组内指定索引的值
# clear variable in an array at the given index, which the index is a integer of a variable in game
# input: ARRAY, VARIABLE # 数组名，变量名
####################################################################################
# clear_array_variable_at_index = { ARRAY, INDEX }
# 
# 清除数组内指定索引的值
# clear variable in an array at the given index
# input: ARRAY, INDEX # 数组名，索引值（整数）
####################################################################################

# 根据某一个变量的值，清除数组内指定索引的值
# clear variable in an array at the given index, which the index is a integer of a variable in game
# input: ARRAY, VARIABLE # 数组名，变量名
clear_array_variable = {
	optimize_memory
	if = {
		limit = { check_variable = { which = $VARIABLE$ value = 0 }}
		clear_variable = $ARRAY$_0
	} else = {
		if = { # if the given index is greater than the maximum index of the array, stops effect
			limit = { check_variable = { which = $VARIABLE$ value > $ARRAY$ }}
			break = yes
		} else_if = {
			limit = { check_variable = { which = $VARIABLE$ value <= $ARRAY$ }}
			get_digits = { ARRAY = $VARIABLE$ VARIABLE = $VARIABLE$ }
			if = {
				limit = { check_variable = { which = $VARIABLE$_DIGIT_1 value = 1 }}
				clear_array_set_digit_2 = { ARRAY = $ARRAY$ VARIABLE = $VARIABLE$ INDEX = 1 }
			} else_if = {
				limit = { check_variable = { which = $VARIABLE$_DIGIT_1 value = 2 }}
				clear_array_set_digit_2 = { ARRAY = $ARRAY$ VARIABLE = $VARIABLE$ INDEX = 2 }
			} else_if = {
				limit = { check_variable = { which = $VARIABLE$_DIGIT_1 value = 3 }}
				clear_array_set_digit_2 = { ARRAY = $ARRAY$ VARIABLE = $VARIABLE$ INDEX = 3 }
			} else_if = {
				limit = { check_variable = { which = $VARIABLE$_DIGIT_1 value = 4 }}
				clear_array_set_digit_2 = { ARRAY = $ARRAY$ VARIABLE = $VARIABLE$ INDEX = 4 }
			} else_if = {
				limit = { check_variable = { which = $VARIABLE$_DIGIT_1 value = 5 }}
				clear_array_set_digit_2 = { ARRAY = $ARRAY$ VARIABLE = $VARIABLE$ INDEX = 5 }
			} else_if = {
				limit = { check_variable = { which = $VARIABLE$_DIGIT_1 value = 6 }}
				clear_array_set_digit_2 = { ARRAY = $ARRAY$ VARIABLE = $VARIABLE$ INDEX = 6 }
			} else_if = {
				limit = { check_variable = { which = $VARIABLE$_DIGIT_1 value = 7 }}
				clear_array_set_digit_2 = { ARRAY = $ARRAY$ VARIABLE = $VARIABLE$ INDEX = 7 }
			} else_if = {
				limit = { check_variable = { which = $VARIABLE$_DIGIT_1 value = 8 }}
				clear_array_set_digit_2 = { ARRAY = $ARRAY$ VARIABLE = $VARIABLE$ INDEX = 8 }
			} else_if = {
				limit = { check_variable = { which = $VARIABLE$_DIGIT_1 value = 9 }}
				clear_array_set_digit_2 = { ARRAY = $ARRAY$ VARIABLE = $VARIABLE$ INDEX = 9 }
			}
		}
	}
	
}

clear_array_set_digit_2 = {
	optimize_memory
	if = {
		limit = { check_variable = { which = $VARIABLE$_DIGITS value = 1 }}
		clear_array_variable_at_index = { ARRAY = $ARRAY$ INDEX = $INDEX$ }
	} else = {
		if = {
			limit = { check_variable = { which = $VARIABLE$_DIGIT_2 value = 0 }}
			clear_array_variable_at_index = { ARRAY = $ARRAY$ INDEX = $INDEX$0 }
		} else_if = {
			limit = { check_variable = { which = $VARIABLE$_DIGIT_2 value = 1 }}
			clear_array_variable_at_index = { ARRAY = $ARRAY$ INDEX = $INDEX$1 }
		} else_if = {
			limit = { check_variable = { which = $VARIABLE$_DIGIT_2 value = 2 }}
			clear_array_variable_at_index = { ARRAY = $ARRAY$ INDEX = $INDEX$2 }
		} else_if = {
			limit = { check_variable = { which = $VARIABLE$_DIGIT_2 value = 3 }}
			clear_array_variable_at_index = { ARRAY = $ARRAY$ INDEX = $INDEX$3 }
		} else_if = {
			limit = { check_variable = { which = $VARIABLE$_DIGIT_2 value = 4 }}
			clear_array_variable_at_index = { ARRAY = $ARRAY$ INDEX = $INDEX$4 }
		} else_if = {
			limit = { check_variable = { which = $VARIABLE$_DIGIT_2 value = 5 }}
			clear_array_variable_at_index = { ARRAY = $ARRAY$ INDEX = $INDEX$5 }
		} else_if = {
			limit = { check_variable = { which = $VARIABLE$_DIGIT_2 value = 6 }}
			clear_array_variable_at_index = { ARRAY = $ARRAY$ INDEX = $INDEX$6 }
		} else_if = {
			limit = { check_variable = { which = $VARIABLE$_DIGIT_2 value = 7 }}
			clear_array_variable_at_index = { ARRAY = $ARRAY$ INDEX = $INDEX$7 }
		} else_if = {
			limit = { check_variable = { which = $VARIABLE$_DIGIT_2 value = 8 }}
			clear_array_variable_at_index = { ARRAY = $ARRAY$ INDEX = $INDEX$8 }
